@{
    ViewData["Title"] = "Home Page";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
<div class="text-center">
    <h2 class="display-5">Wyszukaj warsztat</h2>
</div>
<div class="bg-img-container">
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <form id="search-form" action="@Url.Action("MechanicWorkshopsByCity", "MechanicWorkshop")" method="get">
                            <div class="form-group">
                                <label for="city-input">Wpisz miejscowość</label>
                                <input type="text" class="form-control" id="city-input" name="city">
                            </div>
                            <button class="btn btn-primary" type="submit">Szukaj</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-img-container {
        background-image: url('/images/porsche.jpg');
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center center;
        position: relative;
        height: 600px;
    }

        .bg-img-container:before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.5);
            z-index: 1;
        }

        .bg-img-container .container {
            position: relative;
            z-index: 2;
            height: 100%;
        }

    .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.3);
    }

    .card-body {
        padding: 30px;
    }

    .form-group label {
        color: #222;        
        font-weight: bold;
    }
</style>
