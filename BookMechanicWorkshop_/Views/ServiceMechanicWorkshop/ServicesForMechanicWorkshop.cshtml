<!DOCTYPE html>
<html>
<head>
	<title>Dostępne usługi w warsztacie</title>
</head>
<body>
	<h1>Dostępne usługi w warsztacie</h1>
	<table>
		<thead>
			<tr>
				<th>Nazwa</th>
				<th>Czas oczekiwania</th>
				<th>Zakres cenowy</th>
				<th>Wybierz termin</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var service in Model)
			{
				<tr>
					<td>@service.Name</td>
					<td>@service.Duration</td>
					<td>@service.PriceRange</td>
					<td>
						<a class="btn btn-primary" href="@Url.Action("ChooseDate", "Appointment",
						new { MechanicWorkshopId = service.MechanicWorkshopId})">Sprawdź dostępny termin</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</body>
</html>
