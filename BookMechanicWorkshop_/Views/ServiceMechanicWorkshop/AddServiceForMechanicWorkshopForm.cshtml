@model BookMechanicWorkshop_.Models.ServiceMechanicWorkshop

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<h2>Dodaj nową usługę dla warsztatu</h2>

@using (Html.BeginForm("AddServiceForMechanicWorkshop", "ServiceMechanicWorkshop", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Duration, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.Duration, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PriceRange, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.PriceRange, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MechanicWorkshopId, htmlAttributes: new { @class = "control-label" })
        @Html.DropDownListFor(model => model.MechanicWorkshopId, (SelectList) ViewBag.MechanicWorkshops, "Wybierz warsztat", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.MechanicWorkshopId, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <input type="submit" value="Dodaj" class="btn btn-primary" />
    </div>
}
    